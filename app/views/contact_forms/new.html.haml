.uk-grid
  .uk-width-2-3

  .uk-width-1-3
    %h2 Contact Us
    = form_for @membership, url: contact_form_url do |f|
      %input{:name => "blah", :type => "hidden", :value => @redirect_to}
      = f.hidden_field :list_id
      = f.fields_for :person do |f|
        .row
          = f.text_field :email, placeholder: "Email", class: "uk-width-1-1"
        .row
          = f.text_field :name, placeholder: "Name", required: "", class: "uk-width-1-1"
      = f.fields_for :notes do |f|
        .row
          = f.text_area :content, rows: 10, class: 'uk-width-1-1', placeholder: "Add your message here"
      .row
        = f.submit

:javascript
  $(function() { $('[name=redirect_to]').val(document.location.protocol + '//' + document.location.host + '/thank_you'); })
